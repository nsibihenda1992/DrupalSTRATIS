{
    "name": "drupal/legacy-project",
    "description": "Project template for Drupal 9 projects with composer following drupal/drupal layout",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "jquery/jquery-simple-color",
                "version": "1.2.3",
                "dist": {
                    "url": "https://github.com/recurser/jquery-simple-color/archive/v1.2.3.zip",
                    "type": "zip"
                },
                "type": "drupal-library"
            }
        },
        {
            "type": "package",
            "package": {
                "name": "bgrins/spectrum",
                "version": "1.8.1",
                "dist": {
                    "url": "https://github.com/bgrins/spectrum/archive/refs/tags/1.8.1.zip",
                    "type": "zip"
                },
                "type": "drupal-library"
            }
        },
        {
            "type": "package",
            "package": {
                "name": "jquery/jquery-ui-touch-punch",
                "version": "1",
                "dist": {
                    "url": "https://github.com/furf/jquery-ui-touch-punch/archive/refs/heads/master.zip",
                    "type": "zip"
                },
                "type": "drupal-library"
            }
        }
    ],
    "require": {
        "bgrins/spectrum": "^1.8",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.1",
        "drupal/adminimal_theme": "^1.6",
        "drupal/backup_migrate": "^5.0",
        "drupal/better_exposed_filters": "^5.0",
        "drupal/color_field": "^2.5",
        "drupal/config_filter": "^2.3",
        "drupal/config_ignore": "^2.3",
        "drupal/config_pages": "^2.9",
        "drupal/console": "^1.9",
        "drupal/core-composer-scaffold": "^9.1",
        "drupal/core-project-message": "^9.1",
        "drupal/core-recommended": "^9.1",
        "drupal/core-vendor-hardening": "^9.1",
        "drupal/ctools": "^3.7",
        "drupal/devel": "^4.1",
        "drupal/devel_entity_updates": "^3.0",
        "drupal/editor_advanced_link": "^2.0",
        "drupal/entity_usage": "^2.0@beta",
        "drupal/extlink": "^1.6",
        "drupal/facets": "^2.0",
        "drupal/field_group": "^3.2",
        "drupal/jquery_ui_accordion": "^1.1",
        "drupal/menu_export": "^1.3",
        "drupal/menu_item_extras": "^2.16",
        "drupal/metatag": "^1.21",
        "drupal/paragraphs": "^1.14",
        "drupal/paragraphs_browser": "^1.0",
        "drupal/path_redirect_import": "^2.0",
        "drupal/pathauto": "^1.10",
        "drupal/potx": "^1.0@alpha",
        "drupal/quick_node_clone": "^1.14",
        "drupal/recaptcha": "^3.0",
        "drupal/redirect": "^1.7",
        "drupal/search_api": "^1.23",
        "drupal/simple_sitemap": "^4.1",
        "drupal/smtp": "^1.0",
        "drupal/stage_file_proxy": "^1.2",
        "drupal/swiftmailer": "^2.2",
        "drupal/taxonomy_menu_ui": "^3.0",
        "drupal/token": "^1.10",
        "drupal/toolbar_menu": "^2.2",
        "drupal/twig_tweak": "^3.1",
        "drupal/video_embed_field": "^2.4",
        "drush/drush": "^10.5",
        "jquery/jquery-simple-color": "^1.2",
        "jquery/jquery-ui-touch-punch": "^1.0",
        "kint-php/kint": "^3.3",
        "platformsh/config-reader": "^2.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/console-extend-plugin": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/core-vendor-hardening": true,
            "cweagans/composer-patches": true
        }
    },
    "extra": {
        "enable-patching": true,
        "patches": {
            "drupal/taxonomy_menu_ui": {
                "fix items tanslation in the menu": "patchs/translation-issue.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/legacy-project template!               </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    }
}
